{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    <a href="{{ admin.generateObjectUrl('edit', object) }}" class="btn btn-info" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
        <i class="icon-edit icon-white"></i> {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}